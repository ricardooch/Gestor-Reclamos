@model PTemp_Ochoa.Models.LoginViewModel

<div class="container d-flex justify-content-center">
    <div class="col-md-6 col-lg-4">
        <h2>Login</h2>
        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label asp-for="Usuario"></label>
                <input asp-for="Usuario" class="form-control" maxlength="50" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Clave"></label>
                <input asp-for="Clave" type="password" class="form-control" maxlength="50" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Ingresar</button>
        </form>
    </div>
</div>
